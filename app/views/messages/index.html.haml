= render 'shared/side_bar'

.right-contents
  .topheader
    .left-header
      .left-header__title
        = @group.name
      %ul.left-header__members
        Member :  
        %li.member
        　member
        %li.member
        　member
    .right-header
      .right_header__button
        Edit
  .messages
    =render @messages
  .form
    = form_for [@group,@message] do |f|
      = f.text_field :content, class: 'form__message', placeholder: 'type a message' ,value: ''
      .form__right
        = f.label :image, class: 'form__right__icon' do
          = fa_icon 'picture-o', class: 'icon'
        = f.file_field :image, class: 'hidden'
      = f.submit 'Send',class: 'form__submit'