= render 'shared/side_bar'

.right-contents
  .topheader
    .left-header
      .left-header__title
        = @group.name
      %ul.left-header__members
        Member :  
        %li.member
        - @members.each do |member|
          = member.name
        -# 　member
        -# %li.member
        -# 　member
    .right-header
      = link_to "Edit", edit_group_path(params[:group_id]), method: :get
  .messages
    =render @messages
  .form
    = form_for [@group,@message] do |f|
      = f.text_field :content, class: 'form__message', placeholder: 'Type a message' ,value: ''
      .form__right
        = f.label :image, class: 'form__right__icon' do
          = fa_icon 'picture-o', class: 'icon'
        = f.file_field :image, class: 'hidden'
      = f.submit 'Send',class: 'form__submit'